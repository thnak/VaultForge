@using Color = MudBlazor.Color
<MudDialog>
    <TitleContent>
        <div class="d-flex flex-row">
            <MudText Typo="Typo.h6">
                <MudIcon Class="mb-n1 mr-3" Color="@Color.Primary" Icon="@Icon"/>
                @DialogInstance.Title
            </MudText>
            <MudSpacer></MudSpacer>
            <MudIconButton Icon="@Icons.Material.Filled.Dangerous" Variant="Variant.Text" aria-label="@AppLang.Close" OnClick="@CloseDialog" Class="rounded-pill"></MudIconButton>
        </div>
    </TitleContent>
    <DialogContent>

        <div class="d-flex flex-column justify-center align-center gap-3">
            <img src="@Uri" title="@Title" class="image-dialog-style" alt="@Title"/>
            <MudText Typo="Typo.caption">@Caption</MudText>
        </div>

    </DialogContent>
</MudDialog>