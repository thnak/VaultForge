<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6" >
            <MudIcon Class="mb-n1 mr-3" Color="@DataModel.Color" Icon="@DataModel.TitleIcon" />
            @DialogInstance.Title
        </MudText>
    </TitleContent>

    <DialogContent>

        @if (DataModel.Fragment != null)
        {
            @DataModel.Fragment
        }
        else
        {
            <MudText>@DataModel.Message</MudText>
        }

    </DialogContent>

    <DialogActions>
        <MudButton Color="MudColor.Error" OnClick="@Cancel" Class="rounded-pill" Variant="Variant.Outlined" >@AppLang.Cancel</MudButton>
        <MudButton Color="MudColor.Success" OnClick="@Submit" Class="rounded-pill" Variant="Variant.Filled" >@AppLang.Submit</MudButton>
    </DialogActions>
</MudDialog>